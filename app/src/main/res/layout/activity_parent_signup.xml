<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parent Sign Up"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <!-- Container for Input Fields and Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/title">

        <!-- Email -->
        <EditText
            android:id="@+id/parentUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/parentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="16dp" />
        <EditText
            android:id="@+id/parentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="16dp" />
        <!-- Student Name -->
        <EditText
            android:id="@+id/studentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Name"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Student Class -->
        <EditText
            android:id="@+id/studentClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Class"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Year -->
        <EditText
            android:id="@+id/yearText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="24dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnParentSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:contentDescription="Sign Up" />

    </LinearLayout>
</RelativeLayout>
